<html lang="en">
    <head>
        <title>{$title}</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/public/css/base.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/fontawesome.min.css" integrity="sha512-UuQ/zJlbMVAw/UU8vVBhnI4op+/tFOpQZVT+FormmIEhRSCnJWyHiBbEVgM4Uztsht41f3FzVWgLuwzUqOObKw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/brands.min.css" integrity="sha512-DJLNx+VLY4aEiEQFjiawXaiceujj5GA7lIY8CHCIGQCBPfsEG0nGz1edb4Jvw1LR7q031zS5PpPqFuPA8ihlRA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/regular.min.css" integrity="sha512-KYEnM30Gjf5tMbgsrQJsR0FSpufP9S4EiAYi168MvTjK6E83x3r6PTvLPlXYX350/doBXmTFUEnJr/nCsDovuw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    </head>
    <body>
        <header>
            <nav class="navbar bg-body-tertiary shadow-md border">
            <div class="container-fluid">
                <a class="navbar-brand m-2">inLavorie</a>
                <form class="d-flex m-2" role="search">
                {if $username}
                <div class="btn-group">
                <button class="btn btn-light dropdown-toggle text-capitalize" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="fa-regular fa-circle-user"></i>  Welcome, {$username}
                </button>
                <ul class="dropdown-menu m-2">
                {if $roles == 1}
                    <li><a class="dropdown-item" href="/dashboard">Dashboard</a></li>
                {elseif $roles == 2}
                    <li><a class="dropdown-item" href="/dashboard-kasir">Dashboard</a></li>
                {/if}
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li><a class="dropdown-item" href="/logout">Logout</a></li>
                </ul>
                </div>
                {else}
                <a href="/login" class="btn btn-primary rounded-pill" type="submit">Masuk</a>
                {/if}
                </form>
            </div>
            </nav>
        </header>
        <div id="content">
            {block content}{/block}
            <!-- Modal -->

    

        <div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="myModalLabel">Contact us</h5>
                <button type="button" style="background-color:white;" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form action="/postContacts" method="POST">
            <div class="modal-body txt-color-prime border-0">
            <div class="form-group">
                <label for="exampleFormControlInput1">Nama anda</label>
                <input type="text" class="form-control" name="name" id="exampleFormControlInput1" placeholder="Masukan nama anda" required>
            </div>

            <div class="form-group mt-3">
                <label for="exampleFormControlInput2">Email anda</label>
                <input type="email" class="form-control" name="email" id="exampleFormControlInput2" placeholder="Masukan email anda" required>
            </div>
            
            <div class="form-group mt-3">
                <label for="exampleFormControlTextarea1">Pesan anda</label>
                <textarea class="form-control" name="message" id="exampleFormControlTextarea1" rows="3" required></textarea>
            </div>
            </div>
            <div class="modal-footer border-0">
            <button type="submit" class="btn w-100 btn-md btn-primary rounded-pill">Kirim</button>
            </div>
            </form>
        </div>
        </div>
        </div>
        </div>

       <div class="container">
        <footer class="py-3 my-4">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
            <li class="nav-item"><a href="/" class="nav-link px-2 text-body-secondary">Home</a></li>
            <li class="nav-item"><a href="#features" class="nav-link px-2 text-body-secondary">Fitur</a></li>
            <li class="nav-item"><a href="#pricing" class="nav-link px-2 text-body-secondary">Harga</a></li>
            <li class="nav-item"><button id="contact" class="nav-link px-2 text-body-secondary">Kontak</button></li>
            <li class="nav-item"><a href="#about" class="nav-link px-2 text-body-secondary">Tentang Kami</a></li>
            </ul>
            <p class="text-center fw-bold">Hubungi Kami</p>
            <p class="text-center text-secondary"><i class="fas fa-map-marker-alt"></i> Yogyakarta, Indonesia <i class="fa-brands fa-whatsapp"></i> customer support: 083838620526</p>
            <p class="text-center text-body-secondary">Â© <span id="years"></span> inLavorie Resto v1.0.0</p>
        </footer>
        </div>
        {block scripts}{/block}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
    const d = new Date();
    let year = d.getFullYear();
    document.getElementById("years").innerHTML = year;
    </script>
    </body>
</html>